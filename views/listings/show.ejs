<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3><%= listing.title %></h3>
  </div>
  <!-- div for view details -->
  <div class="card col-6 offset-3 show-card listing-card">
    <img
      src="<%= listing.image %>"
      class="card-img-top show-img"
      alt="listing_img"
    />
    <div class="card-body">
      <p class="card-text">
        Owned by: <em><%= listing.owner.username %></em>
      </p>
      <p class="card-text"> <%= listing.description %> </p>
      <p class="card-text">&#2547; <%= listing.price.toLocaleString('en-BD') %> / night</p>
      <p class="card-text"><%= listing.location %> </p>
      <p class="card-text"><%= listing.country %></p>
    </div>
  </div>
  <!-- div for buttons -->
  <div class="btns">
    <a
      href="/listings/<%= listing._id %>/edit"
      class="btn btn-dark col-1 offset-3 edit-btn"
      >Edit</a
    >

    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
      <button class="btn offset-5 btn-danger">Delete</button>
    </form>
  </div>
  <!-- Review Section -->
  <div class="col-8 offset-3 mb-3">
    <hr />
    <h4>Leave a Review</h4>
    <!-- review form -->
    <form
      method="POST"
      action="/listings/<%= listing._id %>/reviews"
      novalidate
      class="needs-validation"
    >
      <!-- rating div -->
      <div class="mb-3 mt-3">
        <label for="rating" class="form-lable">Rating (1 to 5)</label>
        <input
          type="range"
          min="1"
          max="5"
          id="rating"
          name="review[rating]"
          class="form-range"
        />
      </div>
      <!-- comment div -->
      <div class="mb-3 mt-3">
        <label for="comment" class="form-lable">Comments</label>
        <textarea
          name="review[comment]"
          id="comment"
          cols="30"
          rows="5"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please add some comment for review</div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>
    <hr />
    <!-- Show Reviews -->
    <p><b>All Reviews</b></p>
    <div class="row">
      <% for(review of listing.reviews) { %>
      <div class="card col-5 ms-3 mb-3">
        <div class="card-body mb-3">
          <h5 class="card-title">Jane Doe</h5>
          <p class="card-text"><%= review.comment %></p>
          <p class="card-text">
            <%= review.rating %>
            <span class="fa fa-star" style="color: orange"></span>
          </p>
        </div>
        <!-- DELETE REVIEW -->
        <form
          method="POST"
          action="/listings/<%= listing._id %>/reviews/<%=review._id%>?_method=DELETE"
          class="mb-3"
        >
          <button class="btn btn-sm btn-dark">Delete</button>
        </form>
      </div>
      <% } %>
    </div>
  </div>
</div>
