<% layout("/layouts/boilerplate") %>

<!-- Signup Information -->
<div class="row mt-3">
  <h1 class="col-6 offset-3 mt-3">Login</h1>
  <div class="card col-6 offset-3 mt-3">
    <form
      action="/login"
      method="POST"
      class="needs-validation mt-3 mb-3"
      novalidate
    >
      <!-- Username -->
      <div class="mb-3">
        <label for="username" class="form-label"
          ><strong>Username</strong></label
        >
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required
        />
      </div>
      <!-- Password -->
      <div class="mb-3">
        <label for="password" class="form-label"
          ><strong>Password</strong></label
        >
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-success">Login</button>
    </form>
  </div>
</div>
